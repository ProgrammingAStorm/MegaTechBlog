<article>
  <div>
    <a class="is-size-3" href="{{post_url}}" target="_blank">{{title}}</a>
    <span class="is-size-4">({{format_url post_url}})</span>
  </div>

  <div class="is-size-5">
    {{vote_count}} {{format_plural "point" vote_count}} by {{user.username}} on {{format_date created_at}}
    |
    <a class="link" href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>
</article>
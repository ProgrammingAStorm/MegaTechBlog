<section class="section is-flex is-flex-direction-column">
    <h2 class="is-size-2 m-2">Create New Post</h2>

    <form class="form" id="new-post">
        <div class="field">
            <label class="label" for="post-title">Title</label>

            <div class="control">
                <input class="input" type="text" id="post-title" name="post-title" />
            </div>
        </div>

        <div class="field">
            <label class="label" for="post-url">Link</label>

            <div class="control">
                <input class="input" id="post-url" name="post-url" />
            </div>
        </div>
        
        <button type="submit" class="button is-primary">Create</button>
    </form>
</section>

{{#if posts.length}}
    <section class="section">
        <h2 class="is-size-2">Your Posts</h2>

        <ol>
            {{#each posts as |post|}}
                <li class="box is-size-3 d-li">
                    {{> post-info post}}
                    <a href="/dashboard/edit/{{post.id}}" class="button is-info m-2">Edit post</a>
                </li>
            {{/each}}
        </ol>
    </section>
{{/if}}

<script src="/javascript/add-post.js"></script>
<article class="section">  
  <form class="form" id="edit-form">
    <h2 class="title">
      Edit Post
    </h2>

    <div class="field">
      <label class="label is-size-3" for="post-title"></label>

      <div class="control">
        <input class="is-size-3" name="post-title" type="text" value="{{post.title}}" />

        <span class="is-size-4">({{format_url post.post_url}})</span>
      </div>

      <div class="is-size-5">
        {{post.vote_count}} {{format_plural "point" post.vote_count}} by you on {{format_date post.created_at}}
        |
        <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
      </div>
    </div>

    <button type="submit" class="button is-success">Save post</button>

    <button type="button" class="button is-danger" id="delete">Delete post</button>
  </form>

  <form class="form m-3" id="comment-form">
    <div class="field">
      <label class="label" for="comment-body">Comment:</label>

      <div class="control">
        <textarea class="textarea" name="comment-body"></textarea>
      </div>
    </div>

    <div class="field buttons">
      <button type="submit" class="button">Add Comment</button>

      <button type="button" class="button is-success" id="upvote-btn">Upvote</button>
    </div>
  </form>

  {{> comments post.comments}}

  <script src="/javascript/edit-post.js"></script>
  <script src="/javascript/delete-post.js"></script>
  <script src="/javascript/comment.js"></script>
</article>